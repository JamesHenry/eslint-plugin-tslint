{
  "name": "eslint-plugin-tslint",
  "version": "0.0.0-semantically-released",
  "main": "lib/index.js",
  "author": "James Henry <james@henry.sc>",
  "description": "TSLint wrapper plugin for ESLint",
  "keywords": ["eslint", "eslintplugin", "eslint-plugin", "tslint"],
  "files": ["lib"],
  "repository": "JamesHenry/eslint-plugin-tslint",
  "license": "MIT",
  "scripts": {
    "test": "npm run build && jest",
    "build": "rm -rf lib/ && tsc",
    "semantic-release":
      "semantic-release pre && npm publish && semantic-release post",
    "precommit": "npm test && lint-staged",
    "cz": "git-cz"
  },
  "peerDependencies": {
    "tslint": "^5.0.0"
  },
  "devDependencies": {
    "@types/jest": "21.1.8",
    "@types/node": "8.0.57",
    "cz-conventional-changelog": "2.1.0",
    "eslint": "4.13.0",
    "husky": "^0.14.3",
    "jest": "21.2.1",
    "lint-staged": "6.0.0",
    "prettier-eslint-cli": "4.4.2",
    "semantic-release": "8.2.0",
    "ts-jest": "^21.2.3",
    "tslint": "^5.8.0",
    "typescript": "2.6.2",
    "typescript-eslint-parser": "10.0.0"
  },
  "lint-staged": {
    "src/**/*": ["prettier-eslint --write", "git add"],
    "test/**/*": ["prettier-eslint --write", "git add"]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/test/.*|(\\.|/)(test|spec))\\.ts$",
    "moduleFileExtensions": ["ts", "js", "json"]
  }
}
